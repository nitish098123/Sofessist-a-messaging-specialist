<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/other_moment_layout_id">

    <ImageView
        android:id="@+id/other_moment_item_id_pic"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:layout_marginVertical="5dp"
        android:src="@drawable/display_picture"/>
    <TextView
        android:id="@+id/other_moments_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="others_momnets_name"
        android:layout_marginStart="17sp"
        android:layout_marginTop="15dp"
        android:textColor="@color/black" />

</LinearLayout>