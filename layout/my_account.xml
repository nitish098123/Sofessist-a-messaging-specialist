<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bar_dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="My Account"
             android:textColor="@color/white"
             android:layout_centerHorizontal="true"
             android:textSize="20sp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

       <ImageView
           android:id="@+id/my_dp"
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="61dp"
           android:src="@drawable/dp_title_color"/>
    <ImageView
        android:id="@+id/change_my_dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:src="@drawable/add_dp"/>

<!--    for name sections-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_my_dp"
        android:id="@+id/name_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:text="username"
        android:layout_marginStart="90dp"/>

    <TextView
        android:id="@+id/my_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="90dp" />

        <ImageView
            android:id="@+id/change_my_name_id"
            android:layout_width="30dp"
            android:layout_height="28dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="60sp"
            android:src="@drawable/new_chat" />

        <Space
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1">
        </Space>
    </RelativeLayout>



<!--    for about sections-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_layout"
        android:id="@+id/about_section"
        >
        <Space
            android:layout_width="0dp"
            android:layout_height="76dp"
            android:layout_weight="1">
        </Space>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="13dp"
        android:layout_marginStart="90dp"/>
    <TextView
        android:id="@+id/about_show_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My about"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        />
    <ImageView
        android:id="@+id/change_my_about_id"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="60dp"
        android:src="@drawable/new_chat" />

    </RelativeLayout>


<!--    for the number sections-->

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/about_section"
         android:id="@+id/number_sections">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="20dp"
        android:text="My Number"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/my_number_show_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Number"
        android:textSize="13dp"
        android:layout_marginStart="90dp"
        android:layout_alignParentTop="true"/>
     </RelativeLayout>


</RelativeLayout>