<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    >

    <TextView
        android:id="@+id/txtMyMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/textview_right"
        android:paddingRight="25dp"
        android:text="Th"
        android:maxWidth="310dp"
        android:layout_marginRight="4dp"
        android:minWidth="140dp"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:textSize="16dp" />


<!--      for time showing of the message sended-->
    <TextView
        android:id="@+id/my_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3:30pm"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textStyle="normal"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="13dp"
        />

<!--    for remainder viewed if it is given-->

    <ImageView
        android:id="@+id/remainder_show_in_chat"
        android:layout_width="17dp"
        android:layout_height="17dp"
        android:src="@drawable/remainder_chat"
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtMyMessage"/>


</RelativeLayout>