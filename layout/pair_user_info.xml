<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

      <ImageView
          android:id="@+id/user_profile_picture"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:layout_centerHorizontal="true"
          android:src="@drawable/user_info"/>
    <TextView
        android:id="@+id/pair_user_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:translationY="103dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/pair_user_number_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="number"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:translationY="127dp"
        android:layout_centerHorizontal="true"/>

<!--    Icons of features-->

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="170dp"
        android:src="@drawable/save_to_galary" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/notification_on"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="170dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:src="@drawable/wallpaper" />

<!--    Name of features -->
     <TextView
         android:layout_width="90dp"
         android:layout_height="wrap_content"
         android:text="allow media save to Galary (on)"
         android:textSize="10dp"
         android:textColor="@color/black"
         android:translationY="200dp"
         android:layout_marginStart="18dp"
         android:layout_marginLeft="18dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="notification on"
        android:textSize="10dp"
        android:translationY="200dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:text="Wallpaper"
        android:textColor="@color/black"
        android:textSize="10dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        />

<!--    2nd layer of features-->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="248dp"
        android:src="@drawable/privat_messages" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:src="@drawable/disapear_messages" />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:src="@drawable/block_user"
        android:layout_marginTop="249dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        />


    <!--   name of 2nd features -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:text="private chat (off)"
        android:textSize="10dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="280dp"
        android:text="Auto delete (off)"
        android:textSize="10dp"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:text="Block User"
        android:textSize="10dp"
        android:textColor="@color/black"
       android:layout_alignParentRight="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        />

   <TextView
       android:id="@+id/view_below_sheeet_media"
       android:layout_width="170dp"
       android:layout_height="27dp"
       android:text="View Media Section"
       android:background="@color/title_bar_dark"
       android:textColor="@color/white"
       android:textStyle="bold"
       android:paddingStart="8dp"
       android:paddingLeft="8dp"
       android:textSize="17sp"
       android:layout_marginTop="310dp"
       android:layout_centerHorizontal="true" />

</RelativeLayout>