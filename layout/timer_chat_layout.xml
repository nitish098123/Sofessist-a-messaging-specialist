<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_white" >

    <ImageView
        android:layout_width="56dp"
        android:layout_height="2.8dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:background="@color/dark_grays"/>

    <TextView
        android:id="@+id/timer_chat_your_message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:background="@drawable/textview_right"
        android:text="ddsfkldfglfgj"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="9dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:text="Set time to send this message automatically"
        android:textColor="@color/title_bar_light"
        android:textSize="19dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:text="Send this message at time."
        android:textColor="@color/dark_grays"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/timer_chat_set_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="8dp"
        android:hint="Enter time " />

    <Button
        android:id="@+id/timer_chat_activate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dark_color_rectangle"
        android:layout_below="@id/timer_chat_your_message_id"
        android:text="activate "
        android:textSize="14dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:textColor="@color/white" />

</RelativeLayout>