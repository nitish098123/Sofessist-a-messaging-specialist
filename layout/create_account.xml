<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".login.posting_data">

     <TextView
         android:id="@+id/section_id_text_view"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Create New Account"
         android:textSize="22dp"
         android:textStyle="bold"
         android:textColor="@color/blue"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="60dp"/>

<!--    mobile number -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="26dp"
        />
    <EditText
        android:id="@+id/get_mobile_number"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="26dp"
        android:hint="Enter mobile number"/>


<!--    getting password-->

    <TextView
        android:id="@+id/password_entry_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Password"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="230dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="26dp"/>
    <EditText
        android:id="@+id/get_password"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="26dp"
        android:hint="Password"/>


    <Button
        android:id="@+id/create_account_button"
        android:layout_width="80dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:text="continue"
        android:textColor="@color/white"
        android:background="@color/title_bar_light" />

    <TextView
        android:id="@+id/show_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:paddingLeft="12dp"
        android:layout_below="@id/create_account_button"
        />


</RelativeLayout>