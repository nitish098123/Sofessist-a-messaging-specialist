<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <RelativeLayout
          android:id="@+id/drawer_head"
          android:layout_width="match_parent"
          android:layout_height="170dp"
          android:background="@color/title_bar_dark"
          android:orientation="vertical">

             <ImageView
                 android:id="@+id/my_profile_pic_id"
                 android:layout_width="103dp"
                 android:layout_height="103dp"
                 android:layout_centerHorizontal="true"
                 android:layout_marginTop="24dp"
                 android:src="@drawable/white_display_picture"/>
           <TextView
               android:id="@+id/header_my_name_id"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="User Name"
               android:textSize="17dp"
               android:textStyle="bold"
               android:layout_below="@id/my_profile_pic_id"
               android:layout_centerHorizontal="true"
               android:textColor="@color/white"/>

      </RelativeLayout>

</RelativeLayout>