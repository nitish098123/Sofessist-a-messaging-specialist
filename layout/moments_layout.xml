<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rectangle_white"
    >

      <ImageView
          android:layout_width="50dp"
          android:layout_height="1dp"
          android:layout_centerHorizontal="true"
          android:background="@color/title_bar_dark"
          android:layout_marginTop="6dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Moments"
            android:textStyle="bold"
            android:textColor="@color/title_bar_dark"
            android:textSize="18dp"
            android:layout_marginTop="14dp"
            android:layout_centerHorizontal="true"/>

      <LinearLayout
          android:id="@+id/my_moment_layout_id"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="43dp"
          android:clickable="true"
          android:orientation="horizontal">

            <ImageView
                android:id="@+id/my_moments_pic_id"
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:src="@drawable/add_my_moments"
                android:layout_marginStart="16dp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="My moments"
          android:layout_marginStart="30dp"
          android:textStyle="normal"
          android:layout_marginVertical="8dp"
          android:textColor="@color/black"/>
      </LinearLayout>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Unviewed Moments"
          android:textStyle="bold"
          android:textColor="@color/dark_grays"
          android:layout_marginTop="95dp"
          android:layout_marginStart="12dp"/>

      <ListView
          android:id="@+id/list_view_other_moment_id"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="119dp"/>

</RelativeLayout>